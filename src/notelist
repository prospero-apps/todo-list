import Note from "./note";

class NoteList {
    constructor() {
        this.notes = [];
    }
    
    count() {
        return this.notes.length;
    }

    add(note) {
        this.notes.push(note);
    }

    remove(note) {
        let noteIndex = notes.indexOf(note);
        this.notes.splice(noteIndex, 1);
    }
}

// create sample NoteLists
// sample notes
note1 = new Note(
    'shopping list',
    '10 eggs, sugar, milk, apples, flour, 2 big cabbages, mineral water');

note2 = new Note(
    'present idea',
    'Steve wants a new toy car for his fifth birthday.');

note3 = new Note(
    "Amy's new address",
    '44 Pearl Avenue, Big Bang City 22650');

note4 = new Note(
    'my password to sth I know about',
    'abc123');

note5 = new Note(
    'info about Mr. Lee',
    'married, two kids (daughter, 36 and son, 33), math teacher, likes loud music sports, dog person');

// create the note list and add the notes to it
notelist = new NoteList();
notelist.add(note1);
notelist.add(note2);
notelist.add(note3);
notelist.add(note4);
notelist.add(note5);

export default NoteList;